CREATE DATABASE IF NOT EXISTS cafe_db;

USE cafe_db;

CREATE TABLE customers (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(200),
    email VARCHAR(200) UNIQUE,
    phone VARCHAR(50),
    password VARCHAR(200),
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS admin (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50) NOT NULL,
    email VARCHAR(50) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL,
    phone VARCHAR(15)
);

INSERT INTO admin(name, email, password, phone)
VALUES ('Admin', 'admin@cafe.com', 'admin123', '9899943210');


CREATE TABLE IF NOT EXISTS menu (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50) NOT NULL,
    price DOUBLE NOT NULL,
    category VARCHAR(50)
);

ALTER TABLE menu ADD quantity INT DEFAULT 0;

ALTER TABLE menu
ADD COLUMN daily_quantity INT NOT NULL DEFAULT 10;   
ALTER TABLE menu
ADD COLUMN remaining_quantity INT NOT NULL DEFAULT 10;  


ALTER TABLE menu
ADD COLUMN last_reset timestamp DEFAULT CURRENT_TIMESTAMP;

SELECT id, name, daily_quantity, remaining_quantity, last_reset
FROM menu;

UPDATE menu m
JOIN order_items oi ON m.id = oi.menu_id
SET m.remaining_quantity = GREATEST(m.remaining_quantity - oi.quantity, 0)
WHERE oi.order_id = ?;



UPDATE menu
SET remaining_quantity = daily_quantity,
    last_reset = CURRENT_DATE
WHERE last_reset < CURRENT_DATE;

UPDATE menu m
JOIN order_items oi ON m.id = oi.menu_id
SET m.remaining_quantity = m.remaining_quantity - oi.quantity
WHERE oi.order_id = ?;


